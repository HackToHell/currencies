<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorDisplayOverlay" format="reference|color" />
    <attr name="colorBackground" format="reference|color" />

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- colors -->
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">?attr/colorBackground</item>
        <item name="colorDisplayOverlay">@color/displayOverlay</item>

        <!-- "transparent" action bar -->
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <!-- "transparent" status bar -->
        <item name="colorPrimaryDark">?attr/colorBackground</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!-- "transparent" navigation bar... -->
        <!-- ...is set in de.salomax.currencies.view.BaseActivity -->

        <!-- new MaterialComponents attributes. see https://material.io/blog/android-material-theme-color -->
        <item name="colorPrimary">?android:attr/colorAccent</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorSecondary">?android:attr/colorAccent</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>
        <!-- colorSurface crashes Snackbar in night mode. DON'T USE! (not needed, anyway) -->
        <!-- <item name="colorSurface">?android:attr/colorBackground</item> -->
        <item name="shapeAppearanceSmallComponent">?android:attr/colorAccent</item>
        <item name="shapeAppearanceMediumComponent">?android:attr/colorAccent</item>
        <item name="shapeAppearanceLargeComponent">?android:attr/colorAccent</item>
        <!-- The various "On" colors are used to tint foreground content (such as text and icons) -->
        <item name="colorOnPrimary">?android:attr/textColorPrimary</item>
        <item name="colorOnSecondary">?android:attr/textColorSecondary</item>
        <item name="colorOnBackground">?android:attr/textColorPrimary</item>
        <item name="colorOnError">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.PureBlack" parent="AppTheme">
        <!-- colors -->
        <item name="colorBackground">@color/colorBackgroundPureBlack</item>
        <item name="colorDisplayOverlay">@color/displayOverlayPureBlack</item>
    </style>

    <!-- make actionbar the same color as the background -->
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">?attr/colorBackground</item>
        <item name="background">?attr/colorBackground</item>
    </style>

    <style name="AppTheme.TextAppearance.Keypad" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/textKeypad</item>
    </style>

    <!-- use for the buttons inside MaterialButtonToggleGroup -->
    <style name="AppTheme.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:stateListAnimator">@animator/btn_elevation</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="backgroundTint">@color/btn_background_tint</item>
        <item name="rippleColor">@color/btn_ripple_color</item>
        <item name="strokeColor">@color/btn_stroke_color</item>
    </style>
</resources>
